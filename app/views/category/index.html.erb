<div class="users-index">
  <h1>Browse categories</h1>

  <div class="container"><br>
    <div class="spread" style="padding: 10px;">
      <%= link_to "Category", category_index_url({q: :name}) %>
      <%= link_to "# of goals", category_index_url({q: :num_goals}) %>
    </div>
    <%@categories.each do |category|%>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%=link_to category.name, category%>
      <span class="badge badge-primary badge-pill" style="font-size: 15px;"><%=category.goals.count%></span>
    </li>
    <%end%>
  </ul>

  </div>
</div>
